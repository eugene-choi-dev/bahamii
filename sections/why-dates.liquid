<div class="why-dates-section" style="background-image:url('{{ section.settings.bg_image | img_url: 'master' }}');background-repeat: no-repeat; background-size: contain;">
  <div class="top-wrapper">
    <h1 class="section-heading">{{ section.settings.heading }}</h1>
    <div class="description-text-container">{{ section.settings.description_text }}</div>
    <div class="badges-container-wrap">
      <div class="badges-container">
        {% for block in section.blocks %}
          {% if block.type == 'image' %}
            <img src="{{ block.settings.badge_image | img_url: 'master' }}" alt="Badge">
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
  <div class="table-header-wrap">
    <h1 class="table-header">{{ section.settings.table_header }}</h1>
  </div>
  <div class="compare-table-wrap">
    <div class="compare-table">
      <div class="left">
        <div class="text-item-container">
          {% for block in section.blocks %}
            {% if block.type == 'left_text' %}
              <div class="text-item">{{ block.settings.text }}</div>
            {% endif %}
          {% endfor %}
        </div>
        <div class="left-image-container">
          <img src="{{ section.settings.left_image | img_url: 'master' }}" alt="Left Image">
        </div>
      </div>
      <div class="right-image-heading-mobile">Traditional Bar</div>
      <div class="right">
        <div class="right-image-container">
          <div class="right-image-heading-desktop">Traditional Bar</div>
          <img src="{{ section.settings.right_image | img_url: 'master' }}" alt="Right Image">
        </div>
        <div class="text-item-container">
          {% for block in section.blocks %}
            {% if block.type == 'right_text' %}
              <div class="text-item">{{ block.settings.text }}</div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .why-dates-section {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

    .top-wrapper,
    .table-header-wrap,
    .compare-table-wrap {
      max-width: 1440px;
      padding: 0 20px;
    }

  .top-wrapper {
    max-width: 930px;
  }

  .section-heading {
    color: #110A0A;
    font-size: 48px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
  }

  .description-text-container {
    color: #110A0A;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    padding-bottom: 15px;
  }

  .badges-container {
    display: flex;
    justify-content: space-between;
  }

  .table-header {
    text-align: center;
    color: #110A0A;
    font-size: 48px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
  }

  .compare-table-wrap {
    padding-top: 10px;
    padding-bottom: 50px;
  }

  .compare-table {
    display: flex;
    justify-content: center;
  }

  .left,
  .right {
    display: flex;
    align-items: center;
  }

  .left {
    justify-content: flex-end;
    padding-right: 100px;
  }

  .right {
    justify-content: flex-start;
  }

  .text-item-container {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    width: 60%;
    height: 100%;
  }

  .right .text-item-container {
    width: 50%;
    height: 85%;
  }

  .text-item {
    font-size: 32px;
    font-style: normal;
    font-weight: 600;
    line-height: 38px;
  }

  .left .text-item {
    text-align: right;
  }

  .right .text-item {
    text-align: left;
    color: #6C6669;
  }

  .left-image-container,
  .right-image-container {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 40%;
  }

  .left-image-container img,
  .right-image-container img {
    max-width: 87%;
  }

  .right-image-container {
    flex-direction: column;
  }

  .right-image-container img {
    width: 71%;
  }

  .right-image-heading-desktop {
    display: block;
    color: #6C6669;
    font-size: 32px;
    font-style: normal;
    font-weight: 600;
    line-height: 38px;
    text-wrap: nowrap;
    padding-bottom: 15px;
  }

  .right-image-heading-mobile {
    display: none;
  }

  @media (max-width: 1024px) {
    .why-dates-section {
      display: flex;
      align-items: center;
      background-size: cover !important;
      background-position: left;
      width: 100%;
      height: 100%;
    }

    .section-heading {
      margin-top: 20px;
      margin-bottom: 20px;
      font-size: 44px;
      font-style: normal;
      font-weight: 700;
      line-height: 123.4%;
    }

    .top-wrapper,
    .table-header-wrap,
    .compare-table-wrap {
      max-width: 500px;
      padding: 0 20px;
    }

    .top-wrapper {
      height: 100%;
    }

    .badges-container {
      display: flex;
      flex-direction: row;
      align-items: center;
    }

    .badges-container img {
      width: 27%;
    }

    .description-text-container {
      padding-bottom: 25px;
    }

    .table-header-wrap {
      display: flex;
      justify-content: center;
    }

    .table-header {
      font-size: 28px;
      font-style: normal;
      font-weight: 700;
      line-height: 123.4%;
      text-align: left;
      height: 100%;
    }

    .compare-table-wrap {
      display: flex;
      justify-content: center;
      height: 100%;
    }

    .compare-table {
      display: flex;
      flex-direction: column;
      height: 100%;
    }

    .left,
    .right {
      margin-bottom: 65px;
    }

    .left {
      flex-direction: row-reverse;
      padding-right: 0;
      justify-content: center;
    }

    .text-item-container {
      width: 65%;
      justify-content: space-between;
      padding-left: 25px;
    }

    .left .text-item {
      text-align: left;
    }

    .left-image-container {
      justify-content: flex-start;
      width: 35%;
    }

    .left-image-container img {
      width: 100%;
      max-width: 100%;
    }

    .right {
      padding-right: 0;
      justify-content: center;
    }
    .right-image-heading-desktop {
      display: none;
    }

    .right-image-heading-mobile {
      display: block;
      margin-bottom: 10px;
      color: #6C6669;
      font-size: 18px;
      font-style: normal;
      font-weight: 600;
      line-height: 38px;
      padding: 0;
    }

    .right .text-item {
      text-align: left;
    }

    .right-image-container {
      width: 35%;
      align-items: flex-start;
    }

    .right-image-container img {
      width: 100%;
      max-width: 100%;
    }

    .right .text-item-container {
      width: 65%;
      height: 100%;
    }

    .text-item {
      font-size: 18px;
      font-style: normal;
      font-weight: 700;
      line-height: normal;
      padding: 20px 0;
    }
  }

</style>

