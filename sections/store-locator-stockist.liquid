<div class="stockist-store-locator">
  <h1 class="section-header" style="font-size: {{  section.settings.section_header_size }}px">{{ section.settings.section_header }}</h1>
  <div class="stock-widget-wrap">
    <!-- Start Stockist.co widget -->
    <div data-stockist-widget-tag="u22504">Loading store locator  
  from
      <a href="https://stockist.co">Stockist store locator</a>...</div>
    <script>
          (function(s,t,o,c,k){c=s.createElement(t);c.src=o;c.async=1;
          k=s.getElementsByTagName(t)[0];k.parentNode.insertBefore(c,k);
          })(document,'script','//stockist.co/embed/v1/widget.min.js');
    </script>
  <!-- End Stockist.co widget -->
  </div>
</div>

<style>
  .stockist-store-locator {
    padding: 40px 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .stockist-store-locator .section-header {
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    margin-top: 20px;
    margin-bottom: 40px;
  }

  .stock-widget-wrap {
    width: 100%;
    max-width: 1170px;
  }

  .stockist-powered-by-link {
    display: none;
  }
</style>

{% schema %}
  {
    "name": "Stockist Store Locator",
    "settings": [
      {
        "type": "textarea",
        "id": "embed_code",
        "label": "Embed Code",
        "default": "<div data-stockist-widget-tag=\"u22504\">Loading store locator from <a href=\"https://stockist.co\">Stockist store locator</a>...</div><script>(function(s,t,o,c,k){c=s.createElement(t);c.src=o;c.async=1;k=s.getElementsByTagName(t)[0];k.parentNode.insertBefore(c,k);})(document,'script','//stockist.co/embed/v1/widget.min.js');</script>"
      }, {
        "type": "text",
        "id": "section_header",
        "label": "Section Header",
        "default": "Store Locator"
      }, {
        "type": "number",
        "id": "section_header_size",
        "label": "Section Header Size (px)",
        "default": 64
      }
    ],
    "presets": [
      {
        "name": "Stockist Store Locator",
        "category": "Custom"
      }
    ]
  }
{% endschema %}