  }

  .badge-grid .badges-wrapper {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 30px;
    width: 100%;
    max-width: 1200px;
    padding: 80px;
  }

  .badge-grid .badge {
    text-align: center;
    margin: 20px;
    /* max-width: 325px; */
  }

  .badge-grid .badge a {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .badge-grid .badge img {
    max-width: 100%;
    height: auto;
  }

  .badge-grid .badge h3 {
    color: #000;
    font-size: 20px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    margin: 15px;
  }

  .badge-grid .badge p {
    color: #000;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 20px;
    margin: 0;
    text-align: left;
  }

  @media (max-width: 1024px) {
    .badge-grid .badges-wrapper {
      grid-template-columns: repeat(auto-fill, minmax(345px, 1fr));
    }
  }

  @media (max-width: 767px) {
    .badge-grid .badges-wrapper {
      padding-left: 5%;
      padding-right: 5%;
    }
  }
</style>


