<div class="badge-grid">
  <div class="badges-wrapper">
    {% for block in section.blocks %}
      <div class="badge">
        <a href="{{ block.settings.url }}">
          <img src="{{ block.settings.image | img_url: '300x300' }}" alt="{{ block.settings.title }}">
          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.description }}</p>
        </a>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .badge-grid {
    display: flex;
    flex-wrap: wrap;
  }

  .badges-wrapper {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    max-width: 1075px;
    margin: 0 auto;
    margin-top: 45px;
    margin-bottom: 70px;
  }

  .badge {
    width: calc(33.3333% - 30px);
    margin: 15px;
    text-align: center;
  }

  .badge a {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .badge img {
    max-width: 100%;
    height: auto;
  }

  .badge h3 {
    color: #000;
    font-size: 20px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    margin: 15px;
  }

  .badge p {
    color: #000;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 20px;
    margin: 0;
    text-align: left;
  }
</style>

{% schema %}
  {
    "name": "Badge Grid",
    "max_blocks": 12,
    "blocks": [
      {
        "type": "badge",
        "name": "Badge",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Badge Image"
          }, {
            "type": "url",
            "id": "url",
            "label": "Badge Link"
          }, {
            "type": "text",
            "id": "title",
            "label": "Title"
          }, {
            "type": "textarea",
            "id": "description",
            "label": "Description"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Badge Grid",
        "category": "Custom"
      }
    ]
  }
{% endschema %}